<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:qwerjk="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullCardLyt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <ImageView
        android:id="@+id/cardTopImg"
        android:layout_width="205dp"
        android:layout_height="177dp"
        android:layout_marginTop="29dp"
        android:src="@mipmap/tp_minion_col_ctg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="50dp" />

    <ImageView
        android:id="@+id/cardBgImg"
        android:layout_width="300dp"
        android:layout_height="412.5dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/weapon_gold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/gem_holder"
        android:layout_width="36.75dp"
        android:layout_height="18dp"
        android:layout_marginBottom="172dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="0dp"
        android:src="@mipmap/weapon_gold_gem_holder_compressor"
        app:layout_constraintBottom_toBottomOf="@+id/cardBgImg"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/cardSetImg"
        android:layout_width="127.5dp"
        android:layout_height="93dp"
        android:layout_marginBottom="55dp"
        android:src="@mipmap/gold_tp_weapon_col_brock"
        app:layout_constraintBottom_toBottomOf="@+id/cardBgImg"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/rareImg"
        android:layout_width="27.75dp"
        android:layout_height="33dp"
        android:layout_marginBottom="153dp"
        android:layout_marginLeft="9dp"
        android:src="@mipmap/rar_legendary"
        app:layout_constraintBottom_toBottomOf="@+id/cardBgImg"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <cn.jk.hscardfactory.utils.MagicTextView
        android:id="@+id/costTxt"
        style="@style/cardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="2dp"
        qwerjk:strokeColor="@color/black"
        qwerjk:strokeJoinStyle="round" />

    <cn.jk.hscardfactory.utils.MagicTextView
        android:id="@+id/cardNameView"
        style="@style/cardName"
        android:layout_marginBottom="186dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/cardBgImg"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_marginLeft="79dp" />

    <cn.jk.hscardfactory.utils.MagicTextView
        android:id="@+id/descView"
        style="@style/cardDesc"
        android:layout_marginLeft="58dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/cardBgImg"
        app:layout_constraintRight_toRightOf="@id/cardBgImg"
        app:layout_constraintTop_toBottomOf="@id/cardNameView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        app:layout_constraintVertical_bias="0.44" />

    <cn.jk.hscardfactory.utils.MagicTextView
        android:id="@+id/attackTxt"
        style="@style/cardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="28dp"
        qwerjk:layout_constraintBottom_toBottomOf="parent"
        qwerjk:layout_constraintLeft_toLeftOf="parent" />

    <cn.jk.hscardfactory.utils.MagicTextView
        android:id="@+id/healthTxt"
        style="@style/cardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        qwerjk:layout_constraintBottom_toBottomOf="@id/cardBgImg"
        qwerjk:layout_constraintRight_toRightOf="@id/cardBgImg" />
</android.support.constraint.ConstraintLayout>
